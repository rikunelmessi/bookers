<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th><%= book.title %></th>
    <th><%= book.body %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <td></td>
    <td></td>
    <td><%=link_to"show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <<td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
    </tr>
  </tbody>
</table>
<% end %>
<h1>New book</h1>
<% if @book.errors.any? %>
<p>2errors prohibited this book from being saved:</p>
   <ul>
     <li>Title can't be blank</li>
     <li>Body can't be blank</li>
   </ul>
   <% end %>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
 <% end %>
